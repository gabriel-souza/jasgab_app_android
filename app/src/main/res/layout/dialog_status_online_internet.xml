<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="24dp"
    android:paddingHorizontal="24dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dialog_status_online_internet_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/dialog_status_online_legend_title"
            style="@style/text_pattern_raised"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoe_ui_bold"
            android:text="Legenda"
            android:textAlignment="textStart"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/dialog_status_online_internet_question_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_question_mark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/dialog_status_online_legend_title"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/dialog_status_online_internet_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_status_online_internet_layout1">

        <TextView
            android:id="@+id/dialog_status_online_legend_private"
            style="@style/text_pattern_raised"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoe_ui_bold"
            android:text="NAT Privado:"
            android:textAlignment="textStart"
            android:textSize="15sp"
            android:textColor="@color/text_pattern_raised_second" />

        <TextView
            android:id="@+id/dialog_status_online_legend_private_desc"
            style="@style/text_pattern_raised"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/dialog_status_online_legend_private"
            android:fontFamily="@font/segoe_ui_regular"
            android:text="Sua conexão possui uma limitação de NAT."
            android:textAlignment="textStart"
            android:textColor="@color/text_pattern_raised_second"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dialog_status_online_internet_layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_status_online_internet_layout2">

        <TextView
            android:id="@+id/dialog_status_online_legend_public"
            style="@style/text_pattern_raised"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoe_ui_bold"
            android:text="NAT Público:"
            android:textAlignment="textStart"
            android:textColor="@color/text_pattern_raised_second"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/dialog_status_online_legend_public_desc"
            style="@style/text_pattern_raised"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/dialog_status_online_legend_public"
            android:fontFamily="@font/segoe_ui_regular"
            android:text="Sua conexão está aberta para internet."
            android:textAlignment="textStart"
            android:textColor="@color/text_pattern_raised_second"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dialog_status_online_internet_layout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_status_online_internet_layout3">

        <TextView
            android:id="@+id/dialog_status_online_legend_ms"
            style="@style/text_pattern_raised"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoe_ui_bold"
            android:text="MS:"
            android:textAlignment="textStart"
            android:textColor="@color/text_pattern_raised_second"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/dialog_status_online_legend_ms_desc"
            style="@style/text_pattern_raised"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/dialog_status_online_legend_ms"
            android:fontFamily="@font/segoe_ui_regular"
            android:text="Milésimo de segundo. Tempo de resposta."
            android:textAlignment="textStart"
            android:textColor="@color/text_pattern_raised_second"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dialog_status_online_internet_layout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_status_online_internet_layout4">

        <TextView
            android:id="@+id/dialog_status_online_legend_ping"
            style="@style/text_pattern_raised"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoe_ui_bold"
            android:text="PING:"
            android:textAlignment="textStart"
            android:textColor="@color/text_pattern_raised_second"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/dialog_status_online_legend_ping_desc"
            style="@style/text_pattern_raised"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/dialog_status_online_legend_ping"
            android:fontFamily="@font/segoe_ui_regular"
            android:text="Verifica a conectividade entre equipamentos."
            android:textAlignment="textStart"
            android:textColor="@color/text_pattern_raised_second"
            android:textSize="15sp" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>