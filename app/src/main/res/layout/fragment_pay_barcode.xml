<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.PayBarcodeFragment">


    <TextView
        android:id="@+id/barcode_bank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include_bill"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-6dp"
        android:background="@drawable/bg_barcode_box"
        android:fontFamily="@font/arial_regular"
        android:paddingHorizontal="50dp"
        android:paddingTop="16dp"
        android:paddingBottom="10dp"
        android:text="Banco Santander"
        android:textColor="@color/black"
        android:textSize="16dp" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/barcode_bank">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="481dp"
            android:layout_above="@+id/barcode_barcode_info"
            android:layout_below="@+id/barcode_bank"
            android:layout_marginStart="-6dp"
            android:layout_marginEnd="30dp">

            <RelativeLayout
                android:id="@+id/barcode_layout_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_barcode_box"
                android:paddingVertical="10dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="26dp">

                    <TextView
                        android:id="@+id/barcode_payday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/barcode_payday_info"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/arial_bold"
                        android:text="20/05/2020"
                        android:textColor="@color/barcode_pay_day"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/barcode_payday_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/arial_bold"
                        android:text="Vence em 3 dias"
                        android:textAlignment="center"
                        android:textColor="@color/barcode_pay_day"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp">

                    <TextView
                        android:id="@+id/barcode_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/barcode_price_info"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/arial_bold"
                        android:text="R$ 79.99"
                        android:textColor="@color/barcode_price"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/barcode_price_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/arial_bold"
                        android:text="Valor total"
                        android:textAlignment="center"
                        android:textColor="@color/barcode_price"
                        android:textSize="12sp" />
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/barcode_layout_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/barcode_layout_one"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_barcode_box"
                android:paddingVertical="10dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/barcode_info_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/barcode_info"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/arial_bold"
                        android:text="Até o vencimento pague em qualquer banco ou correspondente não bancário"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/barcode_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arial_regular"
                        android:text="Informações do boleto"
                        android:textAlignment="center"
                        android:textColor="@color/barcode_person_info"
                        android:textSize="11sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="20dp">

                    <Button
                        android:id="@+id/barcode_status"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@drawable/bt_barcode_pending"
                        android:fontFamily="@font/arial_regular"
                        android:text="PENDENTE"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/barcode_layout_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/barcode_layout_two"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_barcode_box"
                android:paddingVertical="10dp">

                <RelativeLayout
                    android:id="@+id/barcode_layout_two_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/barcode_company"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/barcode_company_info"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/arial_bold"
                        android:text="JASGAB TELECOM"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/barcode_company_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arial_regular"
                        android:text="Beneficiário"
                        android:textAlignment="center"
                        android:textColor="@color/barcode_person_info"
                        android:textSize="11sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/barcode_layout_two_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/barcode_layout_two_one"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/barcode_bank_itau"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/barcode_bank_itau_info"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/arial_bold"
                        android:text="0000 / 000000-0"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/barcode_bank_itau_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arial_regular"
                        android:text="Conta bancária | Itaú"
                        android:textAlignment="center"
                        android:textColor="@color/barcode_person_info"
                        android:textSize="11sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/barcode_layout_two_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/barcode_layout_two_two"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/barcode_bank_santander"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/barcode_bank_santander_info"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/arial_bold"
                        android:text="0000 / 0000000-0"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/barcode_bank_santander_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arial_regular"
                        android:text="Conta bancária | Santander"
                        android:textAlignment="center"
                        android:textColor="@color/barcode_person_info"
                        android:textSize="11sp" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/barcode_layout_four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/barcode_layout_three"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_barcode_box"
                android:paddingVertical="10dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/barcode_person"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/barcode_person_info"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/arial_bold"
                        android:text="Carolina Dantas de Souza"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/barcode_person_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arial_regular"
                        android:text="Pagador"
                        android:textAlignment="center"
                        android:textColor="@color/barcode_person_info"
                        android:textSize="11sp" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

    </ScrollView>

    <Button
        android:id="@+id/barcode_copy_paste"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@drawable/box_white"
        android:drawableStart="@drawable/ic_copy_paste"
        android:paddingHorizontal="5dp"
        android:text=" COPIAR CÓDIGO"
        android:textColor="@color/barcode_button_text"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/barcode_save"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toStartOf="@+id/barcode_send"
        android:layout_toEndOf="@+id/barcode_copy_paste"
        android:background="@drawable/box_white"
        android:drawableStart="@drawable/ic_download"
        android:paddingHorizontal="10dp"
        android:text=" SALVAR"
        android:textColor="@color/barcode_button_text" />

    <Button
        android:id="@+id/barcode_send"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/box_white"
        android:drawableStart="@drawable/ic_send"
        android:paddingHorizontal="10dp"
        android:text="  COMPROVANTE"
        android:textColor="@color/barcode_button_text" />

    <TextView
        android:id="@+id/bill_barcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/barcode_copy_paste"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/arial_regular"
        android:textSize="12sp"
        android:textColor="@color/barcode_person_info"
        android:text="0000000000.00000000000.00000000000000000-0000" />

    <TextView
        android:id="@+id/barcode_barcode_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bill_barcode"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:text="Código de barra para pagamento online"
        android:textColor="@color/black"
        android:textSize="13sp"/>
</RelativeLayout>