<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue_jasgab_dark</item>
        <item name="colorPrimaryDark">@color/blue_jasgab_medium</item>
        <item name="colorAccent">@color/blue_jasgab_light</item>
    </style>

    <style name="Menu_Bottom" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/segoe_ui_regular</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- BUTTON STYLES -->
    <!-- DEFAULT -->
    <style name="button_raised" parent="TextAppearance.AppCompat.Button">
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/button_raised</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/segoe_ui_bold</item>
        <item name="android:textSize">@dimen/text_sub_header</item>
    </style>

    <style name="button_flat" parent="TextAppearance.AppCompat.Button">
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/button_flat</item>
        <item name="android:textColor">@color/blue_jasgab_dark</item>
        <item name="android:fontFamily">@font/segoe_ui_bold</item>
        <item name="android:textSize">@dimen/text_sub_header</item>
    </style>

    <!-- OVERVIEW PAGE -->
    <style name="button_overview" parent="TextAppearance.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_overview</item>
        <item name="android:textColor">@color/button_raised_text</item>
        <item name="android:fontFamily">@font/segoe_ui_regular</item>
        <item name="android:textSize">@dimen/button_raised_text</item>
    </style>


    <!-- TEXT STYLE -->
    <style name="text_pattern_raised" parent="TextAppearance.AppCompat">
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/segoe_ui_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_pattern_raised_blue" parent="TextAppearance.AppCompat">
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/segoe_ui_regular</item>
        <item name="android:textColor">@color/text_pattern_raised_blue</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_pattern_flat" parent="TextAppearance.AppCompat">
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/segoe_ui_regular</item>
        <item name="android:textColor">@color/text_pattern_flat</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_subheader_raised" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/segoe_ui_regular</item>
        <item name="android:textSize">@dimen/text_sub_header</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_display_one_flat" parent="TextAppearance.AppCompat">
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/segoe_ui_regular</item>
        <item name="android:textSize">@dimen/text_display_one</item>
        <item name="android:textColor">@color/text_pattern_flat</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_subheader_flat" parent="TextAppearance.AppCompat">
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/segoe_ui_regular</item>
        <item name="android:textSize">@dimen/text_sub_header</item>
        <item name="android:textColor">@color/text_pattern_flat</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- EDIT TEXT -->
    <style name="edittext_raised" parent="TextAppearance.AppCompat">
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/edittext_raised</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/button_flat_text</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Customize your theme here. -->
        <item name="background">@color/blue_jasgab_light</item>
        <item name="colorAccent">#20FFFF</item>
    </style>

    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/background_sign_up_dropdown</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
